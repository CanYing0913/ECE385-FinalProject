module END_calculator(		input							END,
									input		logic	[9:0]		DrawX, DrawY,
									output	logic	[23:0]	RGB_end,
									output	logic				END_on);


	parameter	[9:0]	left	= 270;
	parameter	[9:0]	right	= 370;
	parameter	[9:0]	up		= 190;
	parameter	[9:0]	down	= 290;
	  
   always_comb
   begin:Ball_on_proc
		if ( ( DistX*DistX + DistY*DistY) <= (Size * Size) ) 
			pea_on = 1'b1;
		else 
			pea_on = 1'b0;
	end 
								
	always_comb
	begin
		if(pea_on == 1'b1)
			RGB_pea	=	24'hF0BC3C;
		else
			RGB_pea	=	24'h800080;
	end
		
endmodule 


