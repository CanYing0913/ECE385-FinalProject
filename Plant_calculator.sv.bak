module Plant_calculator(	input							frame_clk,
								input		logic	[9:0]		DrawX, DrawY, ZomCentralX, ZomCentralY,
								output	logic	[18:0]	read_address_zom,
								output	logic				zom_on);

	parameter sizeX 	= 50;
	parameter sizeY 	= 70;
	logic	[9:0] left, up;
	logic	[9:0] tempX, tempY;
	

	always_comb
	begin
		left	= ZomCentralX - 35;
		up		= ZomCentralY - 35;
	end
	
	always_ff @(posedge frame_clk)
	begin
		tempX	=	DrawX - left;
		tempY	=	DrawY - up;
	end
	
	always_comb
   begin
		if (tempX >= 0 && tempX < 50 && tempY >= 0 && tempY < 70) 
			zom_on = 1'b1;
		else 
			zom_on = 1'b0;
    end 
								
	always_comb
	begin
		if(zom_on == 1'b1)
			read_address_zom	=	tempY * sizeX + tempX;
		else
			read_address_zom	=	19'd0296;
	end
		
endmodule 


