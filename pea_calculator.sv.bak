module pea_calculator(		input							frame_clk, PlantLive,
									input		logic	[9:0]		DrawX, DrawY, BallX, BallY,
									output	logic				pea_on);


	int DistX, DistY, Size;
	assign DistX = DrawX - BallX;
   assign DistY = DrawY - BallY;
   assign Size = 2;
	  
   always_comb
   begin:Ball_on_proc
		if ( ( DistX*DistX + DistY*DistY) <= (Size * Size) ) 
			ball_on = 1'b1;
		else 
			ball_on = 1'b0;
	end 
								
	always_comb
	begin
		if(plant_on == 1'b1)
			read_address_plant	=	tempY * sizeX + tempX;
		else
			read_address_plant	=	19'd0;
	end
		
endmodule 


